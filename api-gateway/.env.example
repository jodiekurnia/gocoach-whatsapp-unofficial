# GoCoach WhatsApp Unofficial API Gateway Configuration

# Server Configuration
PORT=3002
NODE_ENV=production

# Admin Credentials - WAJIB DIGANTI!
# JANGAN gunakan 'admin/admin' di production!
DEFAULT_ADMIN_USER=secure_admin_username
DEFAULT_ADMIN_PASS=your-very-secure-admin-password-123!

# API Rate Limiting
API_RATE_LIMIT=100

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/gocoach_whatsapp

# Redis Configuration
REDIS_URL=redis://username:password@localhost:6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-whatsapp-unofficial-jwt-secret

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhooks/whatsapp-unofficial

# Binary Configuration
BIN_PATH=./bin/whatsapp-web.js
SESSIONS_DIR=./sessions

# Logging
LOG_LEVEL=info
LOG_FILE=logs/whatsapp-unofficial.log

# Security
ENABLE_CORS=true
CORS_ORIGIN=https://your-domain.com

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000